
<div class="wrapper" text-align="center">
  <div class="container">
    <div class="cards">
      <% @cars.each do |c| %>
      <% car = c[1][1] %>
        <%= link_to car_path(car) do %>
        <div class="card">
          <div class="card-body" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.6) 80%), url(<%= cl_image_path(car.photo) %>);">
            <div class="card-link">
              <div class="card-name">
                <%= car.name %><br>
              </div>
              <div class="card-location">
                <%= car.location %><br>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <div class="card-date">
              <p>Posted on 03/02/2019</p>
            </div>
            <div class="card-average">
              <%= raw " <i class='fas fa-star'></i> " * car.gimme_average %>
            </div>
            <div class="card-price">
              <a><%= car.price %></a>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>


